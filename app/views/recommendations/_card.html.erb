<div class="search-item-recommendation">
  <div class="image-container-recommendation" style="position: relative;">
    <div class="rating-star">
      <div class="rating-recommendation"><%= recommendation.rating %> <i class="fas fa-star"></i></div>
    </div>
    <img src="<%= recommendation.image_url %>" alt="">
    <div class="overlay-icons-recommendation">
      <%= render "recommendations/share_and_like_buttons", recommendation: recommendation %>
    </div>
    <div class="description-name-recommendation">
      <%= recommendation.name %>
    </div>
  </div>
  <div class="recommendation-labels d-flex justify-content-between opacity-50">
    <span class="recommendation-category-label label-<%= recommendation.category %>">
      <%= recommendation.category.humanize %>
    </span>
    <div class="recommendation-friendly-label-group d-flex align-items-center">
      <% if recommendation.kid_friendly %>
        <span class="recommendation-friendly-label label-<%= recommendation.kid_friendly %>">
          <i class="fas fa-child"></i>
        </span>
      <% end %>
      <% if recommendation.dog_friendly %>
        <span class="recommendation-friendly-label label-<%= recommendation.dog_friendly %>">
          <i class="fas fa-dog"></i>
        </span>
      <% end %>
    </div>
  </div>
  <p class="description-recommendation"><%= truncate(recommendation.description, length: 100) %></p>
  <% if page == "home" || page == "search_results" %>
    <%= link_to recommendation_path(recommendation, kid_friendly: params[:kid_friendly], dog_friendly: params[:dog_friendly]), class: "text-decoration-none" do %>
      <button class="btn-find-out-more-recommendation">Find Out More</button>
    <% end %>
  <% end %>
</div>
